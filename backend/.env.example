# Server
NODE_ENV=production
PORT=5000

# Database - Use DATABASE_URL for cloud deployments (Railway, Render, etc.)
DATABASE_URL=postgresql://user:password@host:5432/database

# Or use individual settings for local development
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=gsnsd_db
# DB_USER=postgres
# DB_PASSWORD=postgres

# JWT Secrets (generate secure random strings for production!)
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS - set to your Vercel URL)
FRONTEND_URL=https://your-app.vercel.app

# Default Admin (created on first run)
ADMIN_EMAIL=mayare.mbaye@gsnsd.sn
ADMIN_PASSWORD=1234
ADMIN_PRENOM=Mayare
ADMIN_NOM=MBAYE
